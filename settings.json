{
	// BASIC
	"javascript.format.enable": false,
	"search.exclude": {
		"**/node_modules": true
	},

	// EDITOR
	"editor.fontSize": 16,
	"editor.fontLigatures": true,
	"editor.fontFamily": "MonoLisa, Fira Code, Menlo, Monaco, 'Courier New', monospace",
	"editor.tabSize": 4,
	"editor.cursorSmoothCaretAnimation": true,
	"editor.smoothScrolling": true,
	"editor.cursorBlinking": "smooth",
	"editor.lineNumbers": "relative",
	"editor.rulers": [80],
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.minimap.enabled": false,
	"editor.inlineSuggest.enabled": true,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"editor.suggest.showColors": false,

	// WORKBENCH
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "bearded-icons",
	"workbench.startupEditor": "none",
	"workbench.colorCustomizations": {
		"[Poimandres Alternate]": {
			"editor.selectionBackground": "#771835",
			"editor.wordHighlightBackground": "#771835"
		}
	},

	// SECURITY
	"security.workspace.trust.untrustedFiles": "open",

	// PRETTIER
	"prettier.tabWidth": 4,
	"prettier.semi": true,
	"prettier.printWidth": 80,
	"prettier.useTabs": true,
	"prettier.trailingComma": "none",
	"prettier.singleQuote": true,
	"prettier.quoteProps": "consistent",

	// PLUGINS
	"gitlens.hovers.currentLine.over": "line",
	"github.copilot.enable": {
		"*": false,
		"yaml": false,
		"plaintext": true,
		"markdown": false
	},

	// LANGUAGE SETTINGS
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[prisma]": {
		"editor.defaultFormatter": "Prisma.prisma"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[xml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[php]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "vscode.php-language-features"
	},
	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer"
	},

	// VIM Settings
	"vim.cursorStylePerMode.insert": "line",
	"vim.cursorStylePerMode.normal": "line",
	"vim.cursorStylePerMode.replace": "block",
	"vim.cursorStylePerMode.visualline": "block",
	"vim.cursorStylePerMode.visual": "block",
	"vim.cursorStylePerMode.visualblock": "block"
}
